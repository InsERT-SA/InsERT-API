@using MvcExample.Application.Services.Subiekt123.Dto
@{
    ViewData["Title"] = "Dokumenty";
}
@model IEnumerable<DocumentDto>

<div class="text-center page-header">
    <h1 class="display-6">@ViewData["Title"]</h1>
</div>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Numer dokumentu</th>
                <th>Rodzaj</th>
                <th>Kupujący</th>
                <th>Kwota netto</th>
                <th>Kwota brutto</th>
                <th>Waluta</th>
                <th>Status płatności</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model)
            {
                <tr>
                    <th>@document.DocumentNumber</th>
                    <th>@document.Kind</th>
                    <th>@document.Buyer</th>
                    <th>@document.TotalNet</th>
                    <th>@document.TotalGross</th>
                    <th>@document.Currency</th>
                    <th>@document.PaymentState</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <h1 class="display-8">Brak danych</h1>
    </div>
}

<div class="text-center">
    <a class="text-center" asp-area="" asp-controller="Subiekt123" asp-action="Index">
        <div class="btn btn-primary">Powrót</div>
    </a>
</div>